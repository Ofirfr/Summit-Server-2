// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  @@map(name:"user")
  id Int @id @default(autoincrement())
  name String @unique
  trainings Training[]
  active Boolean
}
model Training{
  @@map(name:"training")
  id Int @id @default(autoincrement())
  date DateTime @default(now())// DO I WANT THE OPTION OF CHECKING ATTENDANCE FOR EVERY DAY OR ONLY FOR THE SAME DAY?
  coach Coach @relation(fields: [coachId],references: [id])
  coachId Int
  users User[]
}
model Coach{
  @@map(name:"coach")
  id Int @id @default(autoincrement())
  name String @unique
  password String 
  trainings Training[]
  isAdmin Boolean @default(false)
}
