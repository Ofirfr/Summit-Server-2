generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  @@map(name:"user")
  id Int @id @default(autoincrement())
  name String
  //Trainings
}
model Training{
  @@map(name:"training")
  id Int @id @default(autoincrement())
  date DateTime @default(now())// DO I WANT THE OPTION OF CHECKING ATTENDANCE FOR EVERY DAY OR ONLY FOR THE SAME DAY?
  //Coach
  //Users
}
model Coach{
  @@map(name:"coach")
  id Int @id @default(autoincrement())
  name String
  password String
  //Trainings
}